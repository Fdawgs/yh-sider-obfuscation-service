{
	"name": "ydh-sider-obfuscation-service",
	"version": "11.1.1",
	"description": "Yeovil District Hospital NHSFT's SIDeR contextual link obfuscation service",
	"main": "dist/app.js",
	"repository": "git+https://github.com/Fdawgs/ydh-sider-obfuscation-service.git",
	"homepage": "https://github.com/Fdawgs/ydh-sider-obfuscation-service",
	"bugs": {
		"url": "https://github.com/Fdawgs/ydh-sider-obfuscation-service/issues"
	},
	"license": "MIT",
	"author": "Frazer Smith <frazer.smith@ydh.nhs.uk>",
	"engines": {
		"node": ">=18.12.1"
	},
	"scripts": {
		"benchmark": "autocannon -a 1000 \"http://0.0.0.0:3000/redirect?patient=https://fhir.nhs.uk/Id/nhs-number|9449304513&birthdate=1934-10-23&location=https://fhir.nhs.uk/Id/ods-organization-code|RA4&practitioner=https://sider.nhs.uk/auth|frazer.smith@ydh.nhs.uk\"",
		"build": "node .esbuild.js",
		"jest": "jest",
		"jest:coverage": "jest --coverage",
		"lint": "eslint . --cache --ext js,jsx,ts,tsx --ignore-path .gitignore",
		"lint:licenses": "license-checker --direct --excludePackages=\"@blackpear/obfuscated-querystring@1.0.0;caniuse-lite@1.0.30001458;path-scurry@1.5.0;url-template@2.0.8\" --onlyAllow=\"0BSD;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC;MIT;Python-2.0;Unlicense\" --production --summary",
		"lint:prettier": "prettier . -w -u",
		"lint:prettier:ci": "prettier . -c -u",
		"prepare": "husky install",
		"start": "node .",
		"start:dev": "nodemon src/app.js | pino-pretty",
		"test": "npm run lint && npm run jest"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"jest": {
		"clearMocks": true,
		"collectCoverageFrom": [
			"src/**/*.js",
			"!src/app.js"
		],
		"coverageReporters": [
			"text",
			"lcovonly"
		],
		"resetMocks": true,
		"testEnvironment": "node",
		"testTimeout": 60000
	},
	"nodemonConfig": {
		"env": {
			"NODE_ENV": "development",
			"SUPPRESS_SUPPORT": 1
		},
		"ignore": [
			"test_resources"
		],
		"verbose": true,
		"watch": [
			".env",
			"src"
		]
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.4",
		"@commitlint/config-conventional": "^17.4.4",
		"autocannon": "^7.10.0",
		"esbuild": "^0.17.10",
		"esbuild-plugin-glob": "^2.2.1",
		"eslint": "^8.35.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jest": "^27.2.1",
		"eslint-plugin-jsdoc": "^40.0.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-security": "^1.7.1",
		"eslint-plugin-security-node": "^1.1.1",
		"glob": "^9.1.0",
		"husky": "^8.0.3",
		"is-html": "^2.0.0",
		"jest": "^29.4.3",
		"license-checker": "^25.0.1",
		"nock": "^13.3.0",
		"nodemon": "^2.0.20",
		"pino-pretty": "^9.4.0",
		"playwright": "^1.31.1",
		"prettier": "^2.8.4"
	},
	"dependencies": {
		"@blackpear/obfuscated-querystring": "^1.0.0",
		"@fastify/accepts": "^4.1.0",
		"@fastify/autoload": "^5.7.1",
		"@fastify/compress": "^6.2.0",
		"@fastify/cors": "^8.2.0",
		"@fastify/helmet": "^10.1.0",
		"@fastify/rate-limit": "^7.6.0",
		"@fastify/sensible": "^5.2.0",
		"@fastify/static": "^6.9.0",
		"@fastify/swagger": "^8.3.1",
		"@fastify/under-pressure": "^8.2.0",
		"ajv-formats": "^2.1.1",
		"axios": "^1.3.4",
		"dotenv": "^16.0.3",
		"env-schema": "^5.2.0",
		"fast-querystring": "^1.1.1",
		"fastify": "^4.13.0",
		"fastify-disablecache": "^3.1.0",
		"fastify-floc-off": "^2.1.0",
		"fastify-json-to-xml": "^1.1.0",
		"fastify-plugin": "^4.5.0",
		"file-stream-rotator": "^1.0.0",
		"fluent-json-schema": "^4.1.0",
		"pino": "^8.11.0",
		"redoc": "^2.0.0",
		"secure-json-parse": "^2.7.0",
		"upath": "^2.0.1"
	}
}

{
	"name": "ydh-sider-obfuscation-service",
	"version": "1.0.0",
	"description": "Yeovil District Hospital's SIDeR Service to obfuscate URL query parameters before sending to SIDeR eSP",
	"main": "src/server.js",
	"repository": "git+https://github.com/Somerset-SIDeR-Programme/ydh-sider-obfuscation-service.git",
	"author": "Frazer Smith <frazer.smith@ydh.nhs.uk>",
	"license": "MIT",
	"engines": {
		"node": ">=10.22.0"
	},
	"scripts": {
		"changelog": "conventional-changelog -p @commitlint/config-conventional -s -i CHANGELOG.md && prettier CHANGELOG.md --write",
		"dupe-check": "yarn jsinspect ./src",
		"lint": "eslint . --cache --ext js,jsx,ts,tsx --ignore-path .gitignore",
		"prettier": "prettier . --write --ignore-path .gitignore",
		"start": "node src/server.js",
		"test": "cross-env NODE_ENV=test yarn lint && yarn test-only",
		"test-coverage": "cross-env NODE_ENV=test LOGGER_ENABLED=false jest --coverage --runInBand",
		"test-only": "cross-env NODE_ENV=test LOGGER_ENABLED=false jest --detectOpenHandles --runInBand"
	},
	"jest": {
		"clearMocks": true,
		"collectCoverageFrom": [
			"src/plugins/*.js",
			"src/routes/*.js",
			"src/app*.js"
		],
		"testEnvironment": "node",
		"testTimeout": 10000
	},
	"nodemonConfig": {
		"env": {
			"NODE_ENV": "development",
			"SUPPRESS_SUPPORT": 1
		},
		"ignore": [
			"mocks",
			"test_ssl_cert"
		],
		"verbose": true,
		"watch": [
			".env.development",
			"src"
		]
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"endOfLine": "lf",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^11.0.0",
		"conventional-changelog-cli": "^2.1.1",
		"coveralls": "^3.1.0",
		"cross-env": "^7.0.3",
		"eslint": "^7.14.0",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jest": "^24.1.3",
		"eslint-plugin-jsdoc": "^30.7.8",
		"eslint-plugin-json": "^2.1.2",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-security": "^1.4.0",
		"faker": "^5.1.0",
		"fastify-formbody": "^5.0.0",
		"jest": "^26.6.3",
		"jsinspect": "^0.12.7",
		"lodash": "^4.17.20",
		"node-mocks-http": "^1.9.0",
		"nodemon": "^2.0.6",
		"prettier": "2.2.1",
		"superagent": "^6.1.0"
	},
	"dependencies": {
		"axios": "^0.21.0",
		"custom-env": "^2.0.1",
		"fastify": "^3.9.1",
		"fastify-autoload": "^3.3.1",
		"fastify-helmet": "^5.0.3",
		"fastify-plugin": "^3.0.0",
		"file-stream-rotator": "^0.5.7",
		"http-errors": "^1.8.0",
		"obfuscated-querystring": "git+https://github.com/BlackPearSw/obfuscated-querystring.git",
		"pino": "^6.7.0"
	}
}

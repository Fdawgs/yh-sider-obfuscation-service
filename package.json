{
  "name": "ydh-sider-obfuscation-service",
  "version": "7.0.4",
  "description": "Yeovil District Hospital NHSFT's SIDeR Contextual Link Obfuscation Service",
  "main": "src/app.js",
  "repository": "git+https://github.com/Fdawgs/ydh-sider-obfuscation-service.git",
  "homepage": "https://github.com/Fdawgs/ydh-sider-obfuscation-service",
  "bugs": {
    "url": "https://github.com/Fdawgs/ydh-sider-obfuscation-service/issues"
  },
  "license": "MIT",
  "author": "Frazer Smith <frazer.smith@ydh.nhs.uk>",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "benchmark": "autocannon -a 1000 \"http://0.0.0.0:8204/redirect?patient=https://fhir.nhs.uk/Id/nhs-number|9449304513&birthdate=1934-10-23&location=https://fhir.nhs.uk/Id/ods-organization-code|RA4&practitioner=https://sider.nhs.uk/auth|frazer.smith@ydh.nhs.uk\"",
    "jest": "jest --detectOpenHandles --runInBand",
    "jest:coverage": "jest --coverage --runInBand",
    "lint": "eslint . --cache --ext js,jsx,ts,tsx --ignore-path .gitignore",
    "lint:licenses": "license-checker --direct --excludePackages=\"obfuscated-querystring@0.0.2\" --onlyAllow=\"0BSD;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC;MIT;Python-2.0;Unlicense\" --production --summary",
    "lint:prettier": "prettier . --write --ignore-unknown",
    "lint:prettier:ci": "prettier . --check --ignore-unknown",
    "prepare": "husky install && rm -rf .git/hooks && ln -s ../.husky .git/hooks",
    "start": "node .",
    "start:dev": "nodemon",
    "test": "npm run lint && npm run jest"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "coverageReporters": [
      "text",
      "lcovonly"
    ],
    "resetMocks": true,
    "testEnvironment": "node",
    "testTimeout": 10000
  },
  "nodemonConfig": {
    "env": {
      "NODE_ENV": "development",
      "SUPPRESS_SUPPORT": 1
    },
    "ignore": [
      "test_resources"
    ],
    "verbose": true,
    "watch": [
      ".env",
      "src"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "autocannon": "^7.5.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-jsdoc": "^37.5.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-security-node": "^1.1.0",
    "faker": "5.5.3",
    "fastify-formbody": "^5.2.0",
    "glob": "^7.2.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "license-checker": "^25.0.1",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.15",
    "prettier": "2.5.1"
  },
  "dependencies": {
    "ajv-formats": "^2.1.1",
    "axios": "^0.24.0",
    "dotenv": "^10.0.0",
    "env-schema": "^3.5.1",
    "fastify": "^3.25.3",
    "fastify-accepts": "^2.1.0",
    "fastify-autoload": "^3.9.0",
    "fastify-compress": "^4.0.1",
    "fastify-cors": "^6.0.2",
    "fastify-disablecache": "^2.0.4",
    "fastify-floc-off": "^1.0.4",
    "fastify-helmet": "^5.3.2",
    "fastify-plugin": "^3.0.0",
    "fastify-rate-limit": "^5.7.0",
    "fastify-sensible": "^3.1.2",
    "fastify-swagger": "4.12.0",
    "file-stream-rotator": "^0.5.7",
    "fluent-json-schema": "^3.0.1",
    "obfuscated-querystring": "git+https://github.com/BlackPearSw/obfuscated-querystring.git",
    "pino": "^7.6.2",
    "pino-pretty": "^7.3.0",
    "secure-json-parse": "^2.4.0",
    "under-pressure": "^5.8.0",
    "upath": "^2.0.1"
  }
}
